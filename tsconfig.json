{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "cypress",
      "node"
    ],
    "allowJs": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "cypress/**/*.ts",
    "cypress.config.ts",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
